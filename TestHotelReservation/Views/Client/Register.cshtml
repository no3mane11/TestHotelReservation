@model TestHotelReservation.Models.Client

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - TestHotelReservation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80%;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            padding: 10PX; /* Réduit encore le padding général */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 350px; /* Réduit la largeur du formulaire */
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 10px; /* Réduit l'espacement sous le titre */
        }

        form div {
            margin-bottom: 12px; /* Réduit l'espacement entre les champs */
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        input {
            width: 100%;
            padding: 8px; /* Réduit le padding des inputs */
            font-size: 13px; /* Réduit la taille de la police */
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
        }

            input:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        button {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #218838;
            }

            button:focus {
                outline: none;
            }

        .message {
            color: red;
            text-align: center;
            margin-bottom: 15px;
        }

        .register-link {
            display: block;
            text-align: center;
            margin-top: 10px;
            color: #007bff;
            text-decoration: none;
        }

            .register-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Inscription</h2>
        <form asp-action="Register" method="post">
            <div>
                <label for="Nom">Nom :</label>
                <input asp-for="Nom" placeholder="Entrez votre nom" required />
            </div>
            <div>
                <label for="Prenom">Prénom :</label>
                <input asp-for="Prenom" placeholder="Entrez votre prénom" required />
            </div>
            <div>
                <label for="Email">Email :</label>
                <input asp-for="Email" type="email" placeholder="Entrez votre email" required />
            </div>
            <div>
                <label for="Telephone">Téléphone :</label>
                <input asp-for="Telephone" type="tel" placeholder="Entrez votre téléphone" required />
            </div>
            <div>
                <label for="MotDePasse">Mot de passe :</label>
                <input asp-for="MotDePasse" type="password" placeholder="Entrez votre mot de passe" required />
            </div>
            <div>
                <label for="Adresse">Adresse :</label>
                <input asp-for="Adresse" placeholder="Entrez votre adresse" required />
            </div>
            <button type="submit">S'inscrire</button>
        </form>
        <div class="text-center mt-3">
            <p>Vous avez déjà un compte ? <a href="/Client/Login" class="register-link">Se connecter</a></p>
        </div>
    </div>
</body>
</html>
